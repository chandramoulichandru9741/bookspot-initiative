  <%- include ('../include/_header') %>

    <!-- The "list of books" bar is hidden inside + hotline + contact information -->
    <%- include('../include/_cartgory') %>
    <!-- shopping cart interface-->
    <section class="content my-3">
        <div class="container">
            <div class="cart-page bg-white">
                <div class="row">
                    <!-- shopping cart interface when there is no item  -->

                    <% if(bookInfo.length===0) { %>
                    <div class="col-12 cart-empty ">
                        <div class="py-3 pl-3">
                            <h6 class="header-gio-hang">YOUR CART <span>(0 products)</span></h6>
                            <div class="cart-empty-content w-100 text-center justify-content-center">
                                <img src="images/shopping-cart-not-product.png" alt="shopping-cart-not-product">
                                <p>There are no products in your cart yet</p>
                                <a href="/" class="btn nutmuathem mb-3">Buy more</a>
                            </div>
                        </div>
                    </div>
                    <% } else{ %>  

                    <!-- cart interface when in stock (the blue comment below is part 2 products in the cart but now demoed with jquery) -->
                    
                    <% bookInfo.forEach(function(book){ %>
                        
                        <%- include('../include/_bookcarttemplate',{book}) %>
                      <% }); %>
                      <% } %>
                    <!-- payment section interface is on the right -->
                    
                    <!-- the div cart steps  -->
                </div>
                <!-- het row  -->
            </div>
            <!-- het cart-page  -->
        </div>
        <!-- het container  -->
    </section>
